<%- include("partials/header") %>

<main>
  <h1>Welcome to Adventure Kingdom!</h1>
  <p><strong><%= openHours %></strong></p>
  <p>Explore our wild rides and themed areas. A family day out filled with excitement awaits!</p>
  <p><a href="/areas">Check out the themed areas</a></p>

  <!-- Image Section (Flexbox for side-by-side images) -->
  <div class="image-gallery">
    <!-- First Image Section -->
    <div class="intro-image">
      <img id="imageOne" src="/img/im.jpg" alt="Adventure Kingdom" />
    </div>

    <!-- Second Image Section -->
    <div class="intro-image">
      <img id="imageTwo" src="/img/image.jpg" alt="Adventure Kingdom" />
    </div>
  </div>

</main>

<%- include("partials/footer") %>

<style>
  main {
    max-width: 960px;
    margin: 3rem auto;
    padding: 2.5rem;
    background: rgba(255, 255, 255, 0.98);
    border-radius: 18px;
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
    backdrop-filter: blur(8px);
    animation: fadeIn 1s ease-out;
    text-align: center; /* Center all text and images in the main area */
  }

  .image-gallery {
    display: flex;
    justify-content: space-between; /* Space the images apart */
    gap: 20px; /* Space between the images */
    flex-wrap: wrap; /* Allow the images to stack on smaller screens */
  }

  .intro-image {
    flex: 1;
    max-width: 48%; /* Ensure both images don't overflow and are side by side */
    margin-top: 30px; /* Add margin above each image */
    margin-bottom: 30px; /* Add margin below each image */
    display: flex;
    justify-content: center; /* Center the images horizontally */
  }

  .intro-image img {
    width: 100%; /* Ensure the image stretches to fit the container */
    height: auto; /* Maintain aspect ratio */
    border-radius: 10px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    object-fit: cover; /* Ensure the image fills the container while preserving its aspect ratio */
  }

  main h1 {
    color: #005fa3;
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  main p {
    font-size: 1.2rem;
    line-height: 1.6;
  }

  a {
    color: #0077cc;
    text-decoration: none;
    font-weight: bold;
  }

  a:hover {
    color: #005fa3;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    main {
      padding: 1.5rem;
      margin: 2rem 1rem;
    }

    .image-gallery {
      flex-direction: column; /* Stack the images vertically on smaller screens */
    }

    .intro-image {
      max-width: 100%; /* Ensure images take full width when stacked */
    }

    main h1 {
      font-size: 1.8rem; /* Smaller heading size on mobile */
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
